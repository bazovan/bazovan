{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "types": ["node", "jest"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    // "declarationMap": true,
    // "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "outDir": "./lib",
    "baseUrl": "./",
    "incremental": true,

    "paths": {
      "@domain": ["src/domain"],
      "@entity": ["src/domain/entity"],
      "@types": ["src/infrastructure/types"],
      "@constants": ["src/infrastructure/constants"],
      "@interfaces": ["src/infrastructure/interfaces"],
    }
  },

  "include": [
    "./src/**/*",
  ],

  "exclude": [
    "./node_modules",
    "./lib",
  ]
}