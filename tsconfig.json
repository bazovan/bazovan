{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "types": ["reflect-metadata", "node", "jest"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declarationMap": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./lib",
    "baseUrl": "./",
    "incremental": true,
  },

  "include": [
    "./src/**/*",
  ],
  
  "exclude": [
    "./node_modules",
    "./lib",
    "./src/__tests__/**/*.test.ts"
  ]
}